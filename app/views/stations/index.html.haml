.row
  .col-xs-12
    %h1 Stations
  .col-xs-12
    - @stations.each do |station|
      %h2
        = station.name
        = link_to 'x', station_path(station), method: 'delete', data: { confirm: 'Wirklich gesamte Station l√∂schen?' }

      - station.groups.each do |group|
        = link_to group.name + ' | ', group_path(group)
  .col-xs-12
    %hr

.row
  .col-xs-12
    %h2 Neue Abholstation
  = form_for(@station) do |f|
    .col-xs-12
      = f.text_field :name, placeholder: 'Name', class: 'form-control'
    .col-xs-12
      = button_tag('Speichern', type: 'submit', class: 'btn btn-success')
