.row.margin-below
  .col-xs-12.text-center
    = image_tag 'vegetables_edit.png', style: 'width: 100%;'
= form_for(:new_password, url: { action: :set_new_password }, method: :patch) do |f|
  .hidden-xs.col-sm-3
  .col-sm-6
    .row
      .col-xs-12
        = hidden_field_tag 'id', share_id
      .col-xs-12
        = hidden_field_tag 'token', password_reset_token
      .col-xs-12
        = f.password_field :password, placeholder: 'Neues Password', class: 'form-control'
      .col-xs-12
        = f.password_field :password_confirmation, placeholder: 'Neues Passwort wiederholen' ,class: 'form-control'
      .col-xs-12
        = f.submit "Passwort zur√ºcksetzen", class: "btn btn-primary"
