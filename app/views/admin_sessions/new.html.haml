.row
  .col-xs-12.text-center
    = image_tag 'vegetables_edit.png', style: 'width: 100%;'
= form_for(:admin_session, url: admin_path) do |f|
  .hidden-xs.col-sm-3
  .col-sm-6
    .row
      .col-xs-12.text-center
        %h1 Admin login
      .col-xs-12
        = f.email_field :email, placeholder: 'Email', class: 'form-control'
      .col-xs-12
        = f.password_field :password, placeholder: 'Passwort', class: 'form-control'
      .col-xs-12
        = f.submit "Ab geht's", class: "btn btn-success"
